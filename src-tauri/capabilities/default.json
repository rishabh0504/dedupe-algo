{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "shell:default",
    "core:path:default",
    "core:resources:default",
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "binaries/jarvis",
          "sidecar": true,
          "args": true
        }
      ]
    },
    {
      "identifier": "shell:allow-stdin-write",
      "allow": [
        {
          "name": "binaries/jarvis",
          "sidecar": true
        }
      ]
    },
    "shell:allow-kill"
  ]
}