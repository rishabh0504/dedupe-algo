{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Dedupe-Algo",
  "version": "0.1.1",
  "identifier": "com.dedupealgo.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Dedupe-Algo | Universal Media Deduplication",
        "width": 1280,
        "height": 850,
        "resizable": true,
        "fullscreen": false,
        "maximized": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "infoPlist": {
        "NSDesktopFolderUsageDescription": "Dedupe-Algo needs access to your Desktop to find and remove duplicate files.",
        "NSDocumentsFolderUsageDescription": "Dedupe-Algo needs access to your Documents to find and remove duplicate files.",
        "NSDownloadsFolderUsageDescription": "Dedupe-Algo needs access to your Downloads to find and remove duplicate files."
      }
    }
  }
}