{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Aether Desktop AI",
  "version": "0.1.1",
  "identifier": "com.aether.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Aether | Intelligent Desktop Agent",
        "width": 1280,
        "height": 850,
        "resizable": true,
        "fullscreen": false,
        "maximized": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "infoPlist": "Info.plist"
    },
    "externalBin": [
      "binaries/jarvis"
    ],
    "resources": [
      "../models/*"
    ]
  }
}